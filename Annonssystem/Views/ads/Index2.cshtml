@model Annonssystem.Models.tbl_annonsorer

@{
    ViewBag.Title = "Index";
}
<h2>Lägg till annons</h2>

<div>
    <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#private">Privatperson</button>
    <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#business">Företag</button>
</div>
<br />
<div id="business" class="@ViewBag.collapse">
    <div class="alert alert-info">
        Här inne ska det finnas lite information

    </div>
</div>
<div id="private" class="@ViewBag.collapse">
    <div class="alert alert-info">
        @using (Html.BeginForm())
        {

            <div class="form-group">

                <div class="col-md-10">
                    <h4>Personnummer</h4>
                   
                    <input type="number" class="form-control" name="ID" id="ID" aria-describedby="emailHelp" placeholder="Fyll i personnummer">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
           
        }
      
        <div>
            @using (Html.BeginForm())
            {
            
                <div class="form-group">
                    @Html.LabelFor(model => model.an_ID, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input class="form-control" type="text" placeholder="@ViewBag.ID" readonly>
                      
                    </div>
                </div>

              
            

                <div class="form-group">
                    @Html.LabelFor(model => model.an_name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.an_name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.an_name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.an_srName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.an_srName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.an_srName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.an_adr, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.an_adr, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.an_adr, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.an_poCode, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.an_poCode, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.an_poCode, "", new { @class = "text-danger" })
                    </div>
                </div>
                           


            }
        </div>
    </div>
</div> 
<br />
<script>
    $(document).ready(function () {
        $("button").click(function () {
            $("p").toggle();
        });
    });
</script>


